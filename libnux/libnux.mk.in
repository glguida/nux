@COMPILE_LIBNUX@

LDFLAGS+= -L@NUXBUILDROOT@/$(HALDIR) -L@NUXBUILDDIR@ -L@NUXBUILDROOT@/$(PLTDIR)  -T@NUXSRCROOT@/$(HALDIR)/$(LDFILE)
