include @NUXBUILDDIR@/cfg.mk

@COMPILE_LIBNUX@

LDFLAGS+= -L@NUXBUILDROOT@/$(HALDIR)/$(OBJDIR) -L@NUXBUILDDIR@/$(OBJDIR) -L@NUXBUILDROOT@/$(PLTDIR)/$(OBJDIR)  -T@NUXSRCROOT@/$(HALDIR)/$(LDFILE)
LDADD+=-lhal -lplt -lnux -u _nux_sysinit

LIBDEPS+= @NUXBUILDROOT@/libnux/$(OBJDIR)/libnux.a @NUXBUILDROOT@/$(HALDIR)/$(OBJDIR)/libhal.a @NUXBUILDROOT@/$(PLTDIR)/$(OBJDIR)/libplt.a
