ifeq (z$(EC_MACHINE),z)
EC_MACHINE=@MACHINE@
endif

CFLAGS+= -Wall -nostdinc -fno-builtin -ffreestanding -fno-strict-aliasing
LDFLAGS+= -nostdlib
CPPFLAGS+= -D_EC_SOURCE -I$(SRCROOT)/@ECDIR@
ASFLAGS+= -D_ASSEMBLER


ifeq ($(EC_MACHINE),amd64)
CPPFLAGS+= -D_EC_MACHINE_AMD64=1
endif
ifeq ($(EC_MACHINE),i386)
CPPFLAGS+= -D_EC_MACHINE_I386=1
endif
ifeq ($(EC_MACHINE),riscv64)
CPPFLAGS+= -D_EC_MACHINE_RISCV64=1
CFLAGS+= -mcmodel=medany
endif
