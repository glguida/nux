HAL_MACHINE=@MACHINE@

ifeq ($(HAL_MACHINE),i386)
ARCH_DIR=i386
CFLAGS += -mno-mmx -mno-sse -mno-sse2 -mno-sse3 -mno-avx -mno-avx2
endif

ifeq ($(HAL_MACHINE),amd64)
ARCH_DIR=amd64
CFLAGS += -mno-red-zone
CFLAGS += -mno-mmx -mno-sse -mno-sse2 -mno-sse3 -mno-avx -mno-avx2
endif

PROGRAM=exuser

CFLAGS+= -I../../libnux_user
SRCS+= main.c
SRCS+= $(ARCH_DIR)/crt0.S
LDFLAGS= -L../../libnux_user
LDADD_END= -lnux_user

@COMPILE_LIBEC@
@LINK_LIBEC@
