@COMPILE_LIBEC@

HAL_MACHINE=@MACHINE@

ifeq ($(HAL_MACHINE),i386)
ARCH_DIR=i386
endif

ifeq ($(HAL_MACHINE),amd64)
ARCH_DIR=amd64
endif

CPPFLAGS+=-Iinclude -I$(SRCROOT)/include

LIBRARY=hal

SRCS+= x86.c pmap.c vga_text.c

include $(ARCH_DIR)/Makefile.inc
